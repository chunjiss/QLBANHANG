<div class="wrapper mx-auto w-100">
    <div class="row justify-content-around ">
        <form asp-controller="Auth" asp-action="Login" method="POST" class="col-md-6 py-3 mt-3"style="background-color: lightcoral">
            <h1 class="text-center text-uppercase h3 py-3">
                Đăng nhập
            </h1>
            <div class="form-group">
                <label for="tenDn">Tên đăng nhập</label>
                <input type="text" class="form-control" asp-for="username" id="tenDn" aria-describedby="emailHelp">
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PW">Mật khẩu</label>
                <input type="password" asp-for="password" class="form-control" id="PW">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-secondary btn-block my-3">Submit</button>
            

        </form>
    </div>
</div>


